<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>

<h3>-------------- Doses --------------</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %>: <%= dose.description %>
    <%= link_to "Edit", edit_dose_path(dose.id), class: "btn btn-primary" %>
  <%=
    link_to "Delete", dose_path(dose),
    method: :delete,
    data: { confirm: "Are you sure?" },
    class: "btn btn-warning"
  %>
  </li>
  <% end %>
</ul>
<%= render 'doses/form' %>
<h3>--------------------------------------</h3>

<%= link_to 'Edit', edit_cocktail_path(@cocktail) %> |
<%= link_to 'Back', cocktails_path %>
